        <section class="site-overview sidebar-panel" style="display: block;">
            <link href="{{asset "css/custom.css"}}" rel="stylesheet" type="text/css">
            <div class="site-author motion-element" itemprop="author" itemscope="" itemtype="http://schema.org/Person">
                <img class="site-author-image author-logo" itemprop="image" src="{{@blog.logo}}" alt="{{@blog.title}}">
                <p class="site-author-name" itemprop="name">Liujia Hu</p>
            </div>
            <nav class="site-state motion-element" >
                <div class="site-state-item site-state-posts">
                    <a href="/records">
                        <span class="site-state-item-name">文章</span>
                        <span class="site-state-item-count">
                            {{#get "posts"}}
                                {{pagination.total}}
                            {{/get}}
                        </span>
                    </a>
                </div>

                <div class="site-state-item site-state-categories">
                    <a href="/tags">
                        <span class="site-state-item-name">标签</span>
                        <span class="site-state-item-count">
                            {{#get "tags"}}
                                {{pagination.total}}
                            {{/get}}
                        </span>
                    </a>
                </div>

            </nav>

            <div class="hu-social-link">
                <center>
                <a class="hu-link" href="https://github.com/skydamon" target="_blank" rel="alternate">Gihub</a> <span>&ensp;</span>
                <a class="hu-link" href="https://blog.csdn.net/damontive" target="_blank" rel="alternate">CSDN</a> <span>&ensp;</span>
                <a class="hu-link" href="https://feedly.com/i/subscription/feed/{{@blog.url}}/rss/" target="_blank" rel="alternate">RSS</a>
                </center>
            </div>
            <div class="hu-tags">
                <br>
                <h4 class="hu-aside-title">文章分类</h4>
                {{! Tag Cloud }}
                {{#get "tags" limit="all" include="count.posts" order="count.posts desc" }}
                    {{#foreach tags}}
                    <li class="hu-a-tag">
                        <a class="hu-tag-name" href="/tag/{{slug}}"> {{name}}（{{count.posts}}篇）</a>
                    </li>
                    {{/foreach}}
                    
                {{/get}}
            </div>


</section>
